#!/bin/bash

echo "Building image (amd64)"
docker build -f $DOCKERFILE_PATH -t $IMAGE_NAME-amd64 .

echo "Building image (arm32v7)"
docker build \
  --build-arg QEMU_ARCH=arm \
  --build-arg FROM_ARCH=arm32v7 \
  --file $DOCKERFILE_PATH-qemu \
  --tag $IMAGE_NAME-arm32v7 .

